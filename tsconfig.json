{
  "compilerOptions": {
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "jsx": "react", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./src/*"],
      "@ui-components/*": ["./src/components/ui/*"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"]
    },
    "baseUrl": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "src/stories", "src/**/*.stories.ts", "src/**/*.stories.tsx"],
  "files": ["svg.d.ts"]
}
